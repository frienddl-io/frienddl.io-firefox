{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "webextensions": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-console": ["error", { "allow": ["log", "warn", "error", "dir"] }],
        "comma-dangle": ["error", "never"],
        "func-names": ["error", "never"],
        "prefer-arrow-callback": "off"
    }
}
